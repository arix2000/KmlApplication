<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> <!--Theme.AppCompat.Light.DarkActionBar -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColorLight</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="AppTheme.DayNight" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/textColorLight</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="buttons">
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:textColor">@color/WhiteContent</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="row_style">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/BlackContent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sections">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="form_text_views">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/BlackContent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_about_colors_pools">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/rounded_view</item>
    </style>

    <style name="dialog_about_colors_text_views">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/BlackContent</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="properties_text_views_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="dialog_about_app_titles">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="dialog_about_app_descriptions">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/BlackContent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialogs_style" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="row_style_bold">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
