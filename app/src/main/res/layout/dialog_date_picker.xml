<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:padding="20dp">

    <DatePicker
        android:id="@+id/dialog_date_picker_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyDatePicker"
        android:headerBackground="@drawable/date_picker_shape"
        android:layout_centerHorizontal="true"/>

    <Button
        style="@style/buttons"
        android:id="@+id/dialog_date_picker_accept"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_alignParentRight="true"
        android:text="@string/confirm"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@id/dialog_date_picker_picker"/>

    <Button
        style="@style/buttons"
        android:layout_margin="10dp"
        android:id="@+id/dialog_date_picker_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@id/dialog_date_picker_picker"/>

</RelativeLayout>