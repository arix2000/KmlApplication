<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/form_text_views"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/work_name" />

            <TextView
                android:id="@+id/dialog_history_work_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Nazwa"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                style="@style/form_text_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_description" />

            <TextView
                android:id="@+id/dialog_history_work_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="WorkDescription"
                android:textColor="@color/textColorLight"
                android:textSize="18sp" />

            <TextView
                style="@style/form_text_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date" />

            <TextView
                android:id="@+id/dialog_history_work_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Date"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/form_text_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_time" />

            <TextView
                android:id="@+id/dialog_history_execution_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="ExecutionTime"
                android:textColor="@color/textColorLight"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</layout>